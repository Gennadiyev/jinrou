//jobs
dl.jobs
  dt.jobs-cat
    display block
    margin 0.2em
    padding 2px
    background-color rgba(255,255,255,.6)

    text-align center
    font-weight bold
  dd.jobs-cat
    display flex
    flex-flow row wrap
    justify-content space-between
    &::after
      content ""
      flex auto
  div.jobs-job
    background-color rgba(255,255,255,.3)
    margin 0.25em
    padding 0.3em
    display flex
    flex-flow column nowrap

    &.jobs-job-active
      background-color rgba(255,255,255,.82)
    b
      display flex
      flex-flow row nowrap
      margin-bottom 0.25em
      span
        flex 1 0 auto
        text-align center
      a
        flex 0 0 auto
        color rgba(0,0,0,.7)
        text-decoration none
        margin-left 0.15em
    &.jobs-job-inactive
      background-color rgba(255,255,255,.15)
      b span
        color rgba(0,0,0,.4)
    &.jobs-job-error
      background-color rgba(255,0,0,.82)

    span.jobs-job-controls
      word-wrap nowrap
      text-align center
      display flex
      input.jobs-job-controls-check
        flex 0 0 auto
      input.jobs-job-controls-number
        flex 1 0 2.8em
      button.jobs-job-controls-button
        border none
        padding 2px
        margin 0 0.2em
        background transparent

        font-size 1.05em
        color rgba(0,0,0,.6)
        cursor pointer
  div.jobs-job[data-job="Human"] span.jobs-job-controls
    text-align right
  &[data-checkboxes="no"]
    span.jobs-job-controls input.jobs-job-controls-check
      display none
  &:not([data-checkboxes="no"])
    div.jobs-job[data-job="Human"]
      display none

    
