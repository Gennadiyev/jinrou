@import 'helpers'

// Main

body, html
  height 100%

body
  font normal 1em sans-serif
  //vertical-gradient #eee, #fff
  margin-left 15px
  margin-right 15px

a
  color #000a68

a.user-name
  white-space pre-wrap

h1
  font-size 1.8em
  font-weight bold
  margin-top 0.2em
  margin-bottom 0.3em
