//header
body > header
  text-align center
  margin-left -15px
  margin-right -15px
  padding 4px 0 4px 8px
  background-color #000000
  vertical-gradient #565656,#131313
  border-bottom 1px solid #aaaaaa
  color #ffffff
  flex-flow row wrap
  align-items center
  line-height 1.05
  h1
    // 月下人狼
    flex auto 0 0
    display inline-block
    margin 0
    font-family 'Takao明朝',serif
    font-size 2em
    text-shadow  1px 1px 1px rgba(200,200,200,0.4)
    a
      text-decoration none
      color #ffffff !important
  #userinfo,nav
    display inline-block
    vertical-align 40%
  #userinfo
    padding 0 5px
  nav ul li
    display inline-block
    white-space nowrap
    margin-right 1em
    a
      color #ffffff !important
      text-decoration none
    a:hover
      background-color rgba(0,0,0,.4)
      box-shadow 0 0 5px 5px rgba(0,0,0,.4)
  #toolbar
    margin-left auto
    text-align right
    span.tool-button
      display inline-block
      margin 0 0.7em
      a
        color #ffffff !important
    span.tool-button.tool-disabled
